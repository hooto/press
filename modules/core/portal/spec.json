{
  "meta": {
    "name": "core/portal",
    "version": "0.0.34"
  },
  "srvname": "pt",
  "status": 1,
  "title": "Portal",
  "nodeModels": [
    {
      "meta": {
        "name": "page"
      },
      "title": "Page",
      "fields": [
        {
          "name": "title",
          "type": "string",
          "length": "100",
          "attrs": [
            {
              "key": "langs",
              "value": "en-us,zh-cn"
            }
          ],
          "title": "Title"
        },
        {
          "name": "content",
          "type": "text",
          "length": "0",
          "attrs": [
            {
              "key": "ui_rows",
              "value": "16"
            },
            {
              "key": "formats",
              "value": "md,shtml"
            }
          ],
          "title": "Content"
        }
      ],
      "extensions": {
        "access_counter": true,
        "permalink": "name"
      }
    }
  ],
  "actions": [
    {
      "name": "page_view",
      "datax": [
        {
          "name": "page_entry",
          "type": "node.entry",
          "query": {
            "table": "page",
            "limit": 1
          },
          "cache_ttl": 3600000
        }
      ]
    }
  ],
  "router": {
    "routes": [
      {
        "path": "page/:page_entry_id",
        "dataAction": "page_view",
        "template": "page-entry-base.tpl"
      }
    ]
  }
}